<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <title>HomePage</title>
</head>
<body>
    <h6 style="text-align: left;">Referral Code</h6>
    <div class="row justify-content-between">
        <div class="col-4">
            <div class="input-group mb-3">
                <form action="/search" method="GET">
                    <input type="text" name="code" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
                </form>
                <form action="/" method="GET">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">X</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-4">
            <div style="text-align: right;">
                <button type="submit" class="btn btn-success"data-bs-toggle="modal" data-bs-target="#ModalForm">+ Add Referral Code</button>
                <div class="modal fade" id="ModalForm" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <form action="/add" method="POST">
                                <div class="modal-header">
                                <h5 class="modal-title">Add Referral Code</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                <div class="mb-3">
                                    <label for="code">Referral Code</label>
                                    <input type="text" name="code" class="form-control" id="code" placeholder="Please Input">
                                </div>
                                <div class="mb-3">
                                    <label for="description">Description</label>
                                    <input type="text" name="description" class="form-control" id="description" placeholder="Please Input">
                                </div>
                                <div class="mb-3">
                                    <label for="type">Type</label>
                                    <input type="text" name="type" class="form-control" id="type" placeholder="Please Input">
                                </div>
                                </div>
                                <div class="modal-footer pt-4">                  
                                <button type="submit" class="btn btn-success mx-auto w-100">Submit</button>
                                </div>
                                <p class="text-center"><a href="/">Cancel</a></p> 
                            </form>
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Referral Code</th>
                <th scope="col">Descriptions</th>
                <th scope="col">Type</th>
                <th scope="col">Added By</th>
                <th scope="col">Created At</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item) => { %>
                <tr>
                    <th scope="row"><%= data.indexOf(item) + 1 %></th>
                    <td><%= item.code %></td>
                    <td><%= item.description %></td>
                    <td><%= item.type %></td>
                    <td><%= item.createdBy %></td>
                    <td><%= item.createdAt %></td>
                    <td>
                        <a href = "/<%= item.id %>/edit"><i class="bi bi-pencil-fill"></i></a>
                    </td>
                    <td>
                        <a href = "/<%= item.id %>/delete"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
<script src="https://www.markuptag.com/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</html>